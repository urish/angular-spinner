{
  "name": "angular-spinner",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "http://github.com/urish/angular-spinner.git"
  },
  "main": "./dist/angular-spinner.js",
  "dependencies": {
    "spin.js": "2.3.2"
  },
  "license": "MIT",
  "devDependencies": {
    "angular": "1.6.1",
    "angular-mocks": "1.6.1",
    "jasmine": "2.5.3",
    "karma": "1.3.0",
    "karma-jasmine": "1.1.0",
    "karma-phantomjs-launcher": "1.0.2",
    "typescript": "2.1.5",
    "webpack": "1.14.0"
  },
  "engines": {
    "node": ">=0.10.0"
  },
  "scripts": {
    "clean": "rm -rf ./dist && rm -rf ./.tsDist",
    "build": "npm run clean && tsc && npm run build:browser && npm run build:browser:debug",
    "build:browser": "webpack ./.tsDist/angular-spinner.js ./dist/angular-spinner.min.js --output-library-target=\"umd\" -p",
    "build:browser:debug": "webpack ./.tsDist/angular-spinner.js ./dist/angular-spinner.js --output-library-target=\"umd\" -d",
    "prepublish": "npm run build",
    "test": "karma start karma.conf.js"
  }
}
